    <Color x:Key="TextPerson">#959eac</Color>
    <Color x:Key="TextHour">#333942</Color>
    <Color x:Key="BarSelectedItem">#012E8B</Color>
    <Color x:Key="HyperLink">#567cd7</Color>
    <Color x:Key="SwitchOffColor">#EBECEF</Color>
    <Color x:Key="SwitchOnColor">#7ed321</Color>

    <Color x:Key="Gray-100">#f6f7f8</Color>
    <Color x:Key="Gray-200">#ebecef</Color>
    <Color x:Key="Gray-300">#ced2d9</Color>
    <Color x:Key="Gray-400">#b2b8c2</Color>
    <Color x:Key="Gray-500">#959eac</Color>
    <Color x:Key="Gray-600">#788396</Color>
    <Color x:Key="Gray-700">#606a7b</Color>
    <Color x:Key="Gray-800">#4a515e</Color>
    <Color x:Key="Gray-900">#333942</Color>
    <Color x:Key="Gray-Black">#000000</Color>
    <Color x:Key="Gray-White">#ffffff</Color>
    <Color x:Key="GradientStart">#141e30</Color>
    <Color x:Key="GradientEnd">#243b55</Color>
    <Color x:Key="HomeCardBorder">#ebecef</Color>

    <Style x:Key="CardsClub" TargetType="cards:SfCardView">
        <Setter Property="HasShadow">True</Setter>
    </Style>

    <Style x:Key="MainPageUrbanLogo" TargetType="Image">
        <Setter Property="Source">logo_urban.png</Setter>
        <Setter Property="HorizontalOptions">Center</Setter>
        <Setter Property="VerticalOptions">End</Setter>
    </Style>

    <Style x:Key="BigUrbanLogo" TargetType="Image">
        <Setter Property="Source">UrbanBIGLogo.png</Setter>
        <Setter Property="WidthRequest">175</Setter>
        <Setter Property="HeightRequest">175</Setter>
    </Style>

    <!--  Common style for buttons  -->
    <Style x:Key="GradientHome" TargetType="graphics:SfGradientView">
        <Setter Property="IsVisible">False</Setter>
    </Style>

    <!--  Common style for buttons  -->
    <Style x:Key="SfGradientViewStyleHome" TargetType="graphics:SfGradientView">
        <Setter Property="Opacity" Value="1" />
        <Setter Property="IsVisible">True</Setter>
        <Setter Property="VerticalOptions" Value="FillAndExpand" />
        <Setter Property="HorizontalOptions" Value="FillAndExpand" />
        <Setter Property="BackgroundBrush">
            <Setter.Value>
                <graphics:SfLinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <graphics:SfLinearGradientBrush.GradientStops>
                        <graphics:SfGradientStop Offset="0.0" Color="{StaticResource GradientStart}" />
                        <graphics:SfGradientStop Offset="1.0" Color="{StaticResource GradientEnd}" />
                    </graphics:SfLinearGradientBrush.GradientStops>
                </graphics:SfLinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

    <OnPlatform x:Key="BwModelicaMedium" x:TypeArguments="x:String">
        <OnPlatform.Platforms>
            <On Platform="Android" Value="BwModelica-Medium.otf#BwModelica-Medium" />
            <On Platform="iOS" Value="Bw Modelica Medium" />
        </OnPlatform.Platforms>
    </OnPlatform>
    
    <OnPlatform x:Key="FontIcons" x:TypeArguments="x:String">
