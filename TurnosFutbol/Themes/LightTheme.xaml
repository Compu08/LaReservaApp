    <Color x:Key="SecondaryGradient">#7644ad</Color>
    <Color x:Key="Secondary">#d54381</Color>
    <Color x:Key="Green">#7ed321</Color>
    <Color x:Key="GreenBlacked">#5ba807</Color>
    <Color x:Key="GreenClarity">#34529905</Color>
    <Color x:Key="Red">#ff4a4a</Color>
    <Color x:Key="ButtonBackground">#19478F</Color>
    <Color x:Key="BackgroundBase">#f6f7f8</Color>
    <Color x:Key="TitleViewBackground">#ffffff</Color>
    <Color x:Key="ItemsBackground">#ffffff</Color>
