            <StackLayout Spacing="0">
                <!--  Title View  -->
                <controls:TitleView Title="Terminos y Condiciones" FontSize="11" BackgroundColor="{DynamicResource TitleViewBackground}">
                    <controls:TitleView.LeadingView>
                        <buttons:SfButton
                            x:Name="Mi"
                            CornerRadius="4"
                            Clicked="GoBack"
                            Style="{StaticResource IconButtonStyle}"
                            Text="{StaticResource Back}" />
                    </controls:TitleView.LeadingView>
                </controls:TitleView>
                <ContentPresenter />
            </StackLayout>
        </ControlTemplate>
    </ContentPage.ControlTemplate>
