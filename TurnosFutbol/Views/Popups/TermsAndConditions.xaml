                <Label Text="Contáctenos"
                       TextColor="{DynamicResource ItemTextColor}"
                       FontAttributes="Bold"/>

                <Label VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" TextColor="{DynamicResource ItemTextColor}">
